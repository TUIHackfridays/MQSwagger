{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries"    : ["jsdoc", "closure"]
    },
    "source": {
        "include":
        [
            "./"
        ],
        "exclude":
        [
            "node_modules/",
            "docs/",
            "test/"
        ],
        "includePattern"  : ".+\\.js(doc)?$",
        "excludePattern"  : "(^|\\/|\\\\)_"
    },
    "plugins": [],
    "templates": {
        "cleverLinks"     : false,
        "monospaceLinks"  : false
    },
    "opts": {
        "encoding"        : "utf8",
        "destination"     : "./docs/",
        "recurse"         : true
    },
    "markdown"  : {
        "parser"          : "gfm",
        "hardwrap"        : true
    }
}
